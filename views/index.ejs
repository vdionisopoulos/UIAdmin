<%- include('partials/header', { title }) %>
<%- include('partials/navbar') %>

<div class="wrapper d-flex flex-column min-vh-100">
  <%- include('partials/adsbar') %>

  <!-- Main layout (sidebar + main content) -->
  <div class="layout-content d-flex flex-grow-1">
    
    <!-- Sidebar -->
    <%- include('partials/sidebar') %>

    <!-- Main content area -->
    <main class="main-content p-4 flex-grow-1">
      <%- include('partials/searchbar') %>
      <%- include('partials/cookiebar') %>

      <div class="container-fluid">
        <h1 class="mb-4"><%= title %></h1>
        <p>Welcome to the Admin UI Dashboard. Use the sidebar to navigate tools.</p>

        <div class="row">
          <!-- Cards -->
          <div class="col-md-6 col-lg-4 mb-4">
            <div class="card h-100 shadow-sm">
              <div class="card-body">
                <h5 class="card-title">SLA Calculator</h5>
                <p class="card-text">Calculate uptime & downtime SLA metrics.</p>
                <a href="/tools/sla-calculator" class="btn btn-primary">Open</a>
              </div>
            </div>
          </div>
          <div class="col-md-6 col-lg-4 mb-4">
            <div class="card h-100 shadow-sm">
              <div class="card-body">
                <h5 class="card-title">Password Generator</h5>
                <p class="card-text">Generate secure passwords quickly.</p>
                <a href="/tools/password-generator" class="btn btn-primary">Open</a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </main>
  </div>

  <!-- Sticky footer -->
  <%- include('partials/footer') %>
</div>

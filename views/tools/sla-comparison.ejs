                      <% const defaultValues = ['99.9', '99.95', '99.99', '99.999', '99.999']; %>
                      <% for (let i = 1; i <= 5; i++) { %>
                        <td>
                          <input
                            type="number"
                            class="form-control text-center"
                            id="sla<%= i %>"
                            step="0.001"
                            value="<%= defaultValues[i - 1] %>"
                            min="90"
                            max="99.999"
                            required
                          />
                        </td>
                      <% } %>
                    </tr>
                  </tbody>
                </table>

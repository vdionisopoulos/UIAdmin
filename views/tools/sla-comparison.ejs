      <div class="container-fluid">
        <h1 class="h3 mb-4">SLA Comparison</h1>

        <div class="card">
          <div class="card-body">

            <!-- Input Table -->
            <form id="compareForm">
              <div class="table-responsive mb-3">
                <table class="table table-bordered text-center align-middle">

<%- include('../partials/header', { title: 'Passphrase Generator' }) %>
<%- include('../partials/navbar') %>

<div class="wrapper d-flex flex-column min-vh-100">
  <%- include('../partials/adsbar') %>

  <div class="layout-content d-flex flex-grow-1">
    <%- include('../partials/sidebar') %>

    <main class="main-content p-4">
      <%- include('../partials/searchbar') %>
      <%- include('../partials/cookiebar') %>

      <div class="container-fluid">
        <h1 class="h3 mb-4">Passphrase Generator</h1>

        <div class="card">
          <div class="card-body d-flex justify-content-center">
            <form id="phraseForm" style="min-width: 360px; max-width: 600px; width: 100%;">
              <div class="mb-3">
                <label for="wordCount" class="form-label">Number of Words</label>
                <input
                  type="number"
                  id="wordCount"
                  class="form-control"
                  value="4"
                  min="2"
                  max="12"
                />
              </div>

              <div class="mb-3">
                <label for="delimiter" class="form-label">Delimiter</label>
                <select id="delimiter" class="form-select">
                  <option value="-">Hyphen (-)</option>
                  <option value="_">Underscore (_)</option>
                  <option value=" ">Space ( )</option>
                  <option value=".">Dot (.)</option>
                </select>
              </div>

              <button type="submit" class="btn btn-theme border border-1 w-100 rounded">ðŸ”‘ Generate Passphrase</button>
            </form>
          </div>
        </div>

        <!-- Result Display -->
        <div id="result" class="card mt-4" style="display: none;">
          <div class="card-body text-center">
            <p class="fw-semibold mb-1">Generated Passphrase:</p>
            <div class="bg-body-tertiary border rounded p-2 mb-2" id="output" style="font-family: monospace;"></div>

            <button id="copyBtn" class="btn btn-sm btn-outline-theme">ðŸ“‹ Copy</button>
            <p id="entropy" class="small text-muted mt-2 mb-0"></p>
          </div>
        </div>
      </div>
    </main>
  </div>

  <%- include('../partials/footer', { script: 'tools/passphrase-generator.js' }) %>
</div>
